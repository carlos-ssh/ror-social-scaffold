<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%unless @temp.include?(@user.id) || @user.id == current_user.id%>
    <%= button_to 'invite', invite_path, method: :post, params: { friend_id: @user.id } %>
  <% end %>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
